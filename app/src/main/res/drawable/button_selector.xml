<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/button_background_unselected" />
            <stroke android:width="1dip" android:color="@color/button_background_unselected" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_background_selected" />
            <stroke android:width="1dip" android:color="@color/button_background_selected" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</selector>